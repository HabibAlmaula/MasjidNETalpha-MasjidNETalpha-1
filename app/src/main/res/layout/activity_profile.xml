                        android:layout_marginBottom="8dp"
                        android:lineSpacingExtra="8sp"
                        android:text="Masjid"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/bgBottomNavigation"
                        android:textFontWeight="bold "
